<form>
  <div class="form-group">
    <label for="project-title">Title</label>
    {{input value=project.title id="project-title" placeholder="Title" class="form-control"}}
  </div>

  <div class="form-group">
      <label>Users:</label>
      <ul>
          {{#each project.users as |user|}}
             {{user-edit user=user tagName="li" users=project.users}}
          {{/each}}
      </ul>
      <a href="#" class="btn btn-primary" {{action 'addUser'}}>Add User</a>
  </div>

  <div class="form-group">
      <label>Admins:</label>
      <ul>
          {{#each project.admins as |user|}}
             {{user-edit user=user tagName="li" users=project.admins}}
          {{/each}}
      </ul>
      <a href="#" class="btn btn-primary" {{action 'addAdmin'}}>Add Admin</a>
  </div>

  <button type="submit" class="btn btn-primary" {{action "save"}}>Save</button>
</form>
